@model IEnumerable<SistemaAcademia.Models.Equipamento>

@{
    ViewData["Title"] = "Equipamentos";
}

<h2 class="dashboard-section-title">Equipamentos</h2>
<p class="dashboard-section-subtitle">
    Gerencie os equipamentos da academia e acompanhe seu status.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de equipamentos</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() equipamento(s) cadastrado(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Novo equipamento
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroPatrimonio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataAquisicao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>Sala</th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroPatrimonio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataAquisicao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>@item.Sala?.Nome</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
