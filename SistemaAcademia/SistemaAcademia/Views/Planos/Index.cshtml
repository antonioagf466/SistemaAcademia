@model IEnumerable<SistemaAcademia.Models.Plano>

@{
    ViewData["Title"] = "Planos";
}

<h2 class="dashboard-section-title">Planos</h2>
<p class="dashboard-section-subtitle">
    Gerencie os planos oferecidos.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de planos</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() plano(s) cadastrado(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Novo plano
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Periodicidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AulasSemana)
                    </th>
                    <th style="width:140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Periodicidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AulasSemana)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
