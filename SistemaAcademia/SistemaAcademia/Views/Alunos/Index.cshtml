@model IEnumerable<SistemaAcademia.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h2 class="dashboard-section-title">Alunos</h2>
<p class="dashboard-section-subtitle">
    Gerencie os alunos cadastrados.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de alunos</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() aluno(s) encontrado(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Novo aluno
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Telefone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataNasc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DataCriacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Plano)
                    </th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Telefone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataNasc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataCriacao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Matricula)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Plano.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
