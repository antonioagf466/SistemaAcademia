@model IEnumerable<SistemaAcademia.Models.Pagamento>

@{
    ViewData["Title"] = "Pagamentos";
}

<h2 class="dashboard-section-title">Pagamentos</h2>
<p class="dashboard-section-subtitle">
    Acompanhe os pagamentos realizados pelos alunos.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de pagamentos</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() pagamento(s) registrado(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Novo pagamento
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NumeroRecibo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Forma)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aluno)
                    </th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroRecibo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Valor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Forma)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aluno.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
