@model SistemaAcademia.Models.Sala

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Sala</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
</div>
<h4>Equipamentos nesta Sala</h4>
<hr />

@if (Model.Equipamentos == null || !Model.Equipamentos.Any())
{
    <p>Nenhum equipamento cadastrado nesta sala.</p>
}
else
{
    <table class="table table-striped sala-equipamentos-table">
        <thead>
            <tr>
                <th>Número do Patrimônio</th>
                <th>Nome</th>
                <th>Marca</th>
                <th>Status</th>
                <th>Data de Aquisição</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var eq in Model.Equipamentos)
            {
                <tr>
                    <td>@eq.NumeroPatrimonio</td>
                    <td>@eq.Nome</td>
                    <td>@eq.Marca</td>
                    <td>@eq.Status</td>
                    <td>@eq.DataAquisicao.ToShortDateString()</td>
                    <td>
                        <a asp-controller="Equipamentos" asp-action="Details" asp-route-id="@eq.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
