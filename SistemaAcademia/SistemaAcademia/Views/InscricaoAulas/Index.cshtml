@model IEnumerable<SistemaAcademia.Models.InscricaoAula>

@{
    ViewData["Title"] = "Inscrições em Aula";
}

<h2 class="dashboard-section-title">Inscrições em Aulas</h2>
<p class="dashboard-section-subtitle">
    Gerencie as inscrições dos alunos nas aulas disponíveis.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de inscrições</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() inscrição(ões) registrada(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Nova inscrição
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DataInscricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aluno)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Aula)
                    </th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DataInscricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aluno.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aula.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
