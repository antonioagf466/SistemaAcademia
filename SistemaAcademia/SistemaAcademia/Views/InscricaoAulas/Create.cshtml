@model SistemaAcademia.Models.ViewModels.InscricaoAulaFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>InscricaoAula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InscricaoAula.AlunoId" class="control-label"></label>
                <select asp-for="InscricaoAula.AlunoId" class="form-control" asp-items="@(new SelectList(Model.Alunos, "Id", "Nome"))"> </select>
            </div>
            <div class="form-group">
                <label asp-for="InscricaoAula.AulaId" class="control-label"></label>
                <select asp-for="InscricaoAula.AulaId" class="form-control" asp-items="@(new SelectList(Model.Aulas, "Id", "Nome"))"> </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
