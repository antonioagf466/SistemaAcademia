@model IEnumerable<SistemaAcademia.Models.Aula>

@{
    ViewData["Title"] = "Aulas";
}

<h2 class="dashboard-section-title">Aulas</h2>
<p class="dashboard-section-subtitle">
    Gerencie as aulas oferecidas.
</p>

<div class="panel-card mb-3">
    <div class="panel-card-header">
        <div>
            <h3 class="panel-card-title">Lista de aulas</h3>
            <p class="panel-card-subtitle mb-0">
                @Model.Count() aula(s) cadastrada(s)
            </p>
        </div>

        <div>
            <a asp-action="Create" class="btn-outline-primary">
                + Nova aula
            </a>
        </div>
    </div>

    <div class="table-wrapper">
        <table class="table-dashboard">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Horario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Vagas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sala)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Professor)
                    </th>
                    <th style="width: 140px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Horario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vagas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sala.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Professor.Nome)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-muted-sm me-2">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-muted-sm me-2">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-muted-sm">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
