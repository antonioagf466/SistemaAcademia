@model SistemaAcademia.Models.Aula

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Aula</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Horario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Horario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vagas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vagas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sala.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Professor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Professor.Nome)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |

</div>
<h4>Alunos inscritos nesta aula</h4>
<hr />

@if (Model.Alunos == null || !Model.Alunos.Any())
{
    <p>Aula não está com cadastrado de nenhuma Aluno.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Matricula</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var au in Model.Alunos)
            {
                <tr>
                    <td>@au.Nome</td>
                    <td>@au.Matricula</td>
                    <td>
                        <a asp-controller="Alunos" asp-action="Details" asp-route-id="@au.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div>

    <a asp-action="Index">Back to List</a>
</div>